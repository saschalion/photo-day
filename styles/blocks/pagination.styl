.pagination
  margin 30px 0 25px
  font-size 13px

  &__label,
  &__links,
  &__link
    display inline-block
    vertical-align middle

  &__label
    margin 0 23px 0 0
    color #848484

  &__link
    margin 0 0 0 9px
    color #000
    text-decoration none

    &._type_page
      width 32px
      height 32px
      line-height 32px
      text-align center
      transition .3s background
      border-radius 50%

      &:not(._state_active)
        &:hover
          background #f7f7f7

      &._state_active
        background #e6e6e6
        font-weight 700

    &:first-child
      margin 0

    &._type_next
      margin-left 20px

      &:hover
        text-decoration underline