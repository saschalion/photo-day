.main-photo
  position relative
  margin 0 0 15px
  animation fadeInBottom unit($animationSpeed, 's') unit($animationSpeed * 2, 's') forwards
  opacity 0

  &__image-inner,
  &__image
    position relative

  &__image
    position relative
    z-index 1

  &__text-inner
    margin 13px 0 0
    font-size 13px

  &__text
    font-weight 700

  &__desc,
  &__desc-link
    color $grayColor

  &__desc-link
    text-decoration none
    transition .3s color

    &:hover
      color $grayColorHover
      text-decoration underline

  &__corner
    position absolute
    bottom 0
    left 50%
    margin 0 0 0 -9px
    width 0
    height 0
    border-style solid
    border-width 0 9px 9px 9px
    border-color transparent transparent #fff transparent
    z-index 2